<%= form_for @dog do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description, as: :text %>
  <br />
  <%= f.label :image, "Images: " %>
  <%= f.file_field :image, as: :file, multiple: true %>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit %>
<% end %>
